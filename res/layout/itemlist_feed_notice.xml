<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:id="@+id/ll_feed_notice">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66000000"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_notice_title"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_feed_notice_day"
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="13dp"
                android:gravity="center_horizontal"
                android:text="03/01"
                android:textColor="#aaffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_feed_notice_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:text="하하하하"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_feed_notice_contents"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#99000000"
        android:paddingBottom="10dp"
        android:paddingLeft="80dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="난 너를 믿었던 만큼 난 내 친구도 믿었기에 난 아무런 부담 없이 널 내 친구에게 소개 시켜줬고 그런 만남이 있은 후 로부터 우리는 자주 함께 만나며 즐거운 시간을 보내며 함께 어울렸던 것뿐인데"
        android:lineSpacingExtra="3dp"
        android:textColor="#a0ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#66ffffff" />

</LinearLayout>