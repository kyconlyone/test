<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_test_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_tutorial_notice"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="25dp" >

        <TextView
            android:id="@+id/tv_tutorial_title_num"
            android:layout_width="45dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="1"
            android:textColor="#00b569"
            android:textSize="31sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:background="#00b569" />

        <TextView
            android:id="@+id/tv_tutorial_title"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="아래의 단어를 터치하면\n발음을 들을 수 있어요"
            android:textColor="#999999"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_shadow_top"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@id/ll_tutorial_notice"
        android:scaleType="centerCrop"
        android:src="@drawable/tuto_shadow" />

    <ImageView
        android:id="@+id/iv_tutorial_right"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:background="@drawable/tuto_good"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_check_step"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="66dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

       
    </LinearLayout>

    <ListView
        android:id="@+id/lv_toturial"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/ll_check_step"
        android:layout_below="@id/iv_shadow_top"
        android:layout_marginBottom="10dp"
        android:focusable="false"
            android:divider="@drawable/main_cell_line" />
    <ImageView 
        android:id="@+id/iv_guide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_shadow_top"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/tuto_guide_01"
        android:visibility="gone"/>
    
     <ImageView 
        android:id="@+id/iv_guide4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_shadow_top"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/tuto_guide_02"
        android:visibility="gone"/>
    
	 <ImageView 
        android:id="@+id/iv_navi3"
        android:layout_width="56dp"
        android:layout_height="70dp"
        android:layout_below="@id/iv_shadow_top"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/animation_large"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_guide2"
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:layout_above="@id/ll_check_step"
        android:layout_below="@id/iv_shadow_top"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:paddingRight="19dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tuto_guide_03"
        android:visibility="gone"/>
    
    <ImageView
        android:id="@+id/iv_nav2"
        android:layout_width="56dp"
        android:layout_height="70dp"
        android:layout_above="@id/ll_check_step"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/animation_large"
        android:visibility="gone"/>

</RelativeLayout>