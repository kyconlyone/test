<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#cccccc"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#cccccc"
            android:orientation="vertical" >

            <Space
                android:layout_width="fill_parent"
                android:layout_height="100dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="#ffffff" >

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#cccccc"
                    android:orientation="vertical" >

                    <Space
                        android:layout_width="fill_parent"
                        android:layout_height="50dp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="MD17854"
                        android:textColor="#6B8E23"
                        android:textSize="11pt" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#cccccc"
                    android:orientation="vertical" >

                    <Space
                        android:layout_width="fill_parent"
                        android:layout_height="50dp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="2014.08.26"
                        android:textColor="#000000"
                        android:textSize="7pt" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff"
                android:gravity="center"
                android:text="김민지님의 학습 관리 데이터입니다."
                android:textColor="#000000"
                android:textSize="6pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView20"
                android:layout_width="85dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="친구 초대"
                android:textColor="#000000"
                android:textSize="7pt" />

            <TextView
                android:id="@+id/tv_faq"
                android:layout_width="85dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="FAQ"
                android:textColor="#000000"
                android:textSize="7pt" />

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="85dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="설정"
                android:textColor="#000000"
                android:textSize="7pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/willBtn"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="#f00000"
                    android:text="" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/will_textTv"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:background="#ffffff"
                        android:gravity="center|left"
                        android:text="의지가 강한 김민지님에게\n조금 쉬운 목표였네요!"
                        android:textColor="#f00000"
                        android:textSize="7pt" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#cccccc"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="일일 평균\n사용 시간"
                    android:textColor="#000000"
                    android:textSize="6pt" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="55dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:text="12"
                    android:textColor="#f00000"
                    android:textSize="12pt" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="15dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5dp"
                    android:gravity="bottom"
                    android:text="분"
                    android:textColor="#f00000"
                    android:textSize="6pt" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="(오늘의) \n목표 달성률"
                    android:textColor="#000000"
                    android:textSize="6pt" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="65dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:text="87"
                    android:textColor="#f00000"
                    android:textSize="12pt" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="15dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5dp"
                    android:gravity="bottom"
                    android:text="%"
                    android:textColor="#f00000"
                    android:textSize="6pt" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff" >

                <Button
                    android:id="@+id/memoryBtn"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="#6B8E23"
                    android:text="" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/memory_textTv"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:background="#ffffff"
                        android:gravity="center|left"
                        android:text="망각곡선 완성도가 높을수록\n정확한 복습단어가 추출됩니다."
                        android:textColor="#6B8E23"
                        android:textSize="7pt" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#cccccc"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/memorize_word"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="36"
                            android:textColor="#000000"
                            android:textSize="12pt" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="총 암기 단어"
                            android:textColor="#000000"
                            android:textSize="6pt" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_launcher" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="망각곡선 분석"
                            android:textColor="#000000"
                            android:textSize="6pt" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/review_word"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="132"
                            android:textColor="#000000"
                            android:textSize="12pt" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="복습해야 할 단어"
                            android:textColor="#000000" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#ffffff"
                    android:orientation="vertical" >

                    <ProgressBar
                        android:id="@+id/forgetting_curve_percentagePb"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp" 
                        android:layout_marginRight="10dp"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="250dp"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="망각곡선 측정률"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/forgetting_curve_percentageTv"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="right"
                            android:text="49%"
                            android:textColor="#000000" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp" >

                <Button
                    android:id="@+id/hitBtn"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:background="#000fff"
                    android:text="" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/hit_textTv"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:background="#ffffff"
                        android:gravity="center|left"
                        android:text="6월 평가원 모의고사 결과가 나왔습니다.\n밀당영단어에서 제공된 단어는..."
                        android:textColor="#000fff"
                        android:textSize="7pt" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#cccccc"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp" >

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center|right"
                        android:text="4-5등급 단어장"
                        android:textColor="#000fff"
                        android:textSize="6pt" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="을 암기 중입니다."
                        android:textColor="#000000"
                        android:textSize="6pt" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="외운 단어 수"
                        android:textColor="#000000"
                        android:textSize="5pt" >
                    </TextView>

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="center|right"
                        android:text="56/682"
                        android:textColor="#000fff"
                        android:textSize="12pt" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>