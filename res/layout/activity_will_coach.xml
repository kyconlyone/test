<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#cccccc"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f00000"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/backBtn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/will_coach_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/button1"
            android:text="코치멘트"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#cccccc"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/will_notice_title_Tv"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:gravity="center|right"
            android:text="김기훈님의 최근 1주일 목표\n달성률은 88%입니다."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/will_noticeTv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:gravity="top|right"
            android:text="일일 평균 학습시간은 21분으로 고3 평균보다 \n2분 많습니다. 현재 의지를 지속하시거나\n학습목표를 상향 설정해도 좋을 것같습니다."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="7pt" />
    </LinearLayout>

</LinearLayout>