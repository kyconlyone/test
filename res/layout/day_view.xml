<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/study_gaugeImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvCurrentDay"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:gravity="center|right"
                android:text="2014.08.26"
                android:textColor="#ffffff"
                android:textSize="9pt" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp" >

                <TextView
                    android:id="@+id/all_use_timeTv"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:gravity="top|right"
                    android:text="총 사용시간"
                    android:textColor="#ffffff"
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/all_use_time_countTv"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:gravity="right|bottom"
                    android:text="17분"
                    android:textColor="#ffffff"
                    android:textSize="20pt" />

                <TextView
                    android:id="@+id/real_use_time_countTv"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="left|bottom"
                    android:text="/15"
                    android:textColor="#ffffff"
                    android:textSize="8pt" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:text="새학습\n단어갯수"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/new_study_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="20dp"
                android:text="122"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:text="복습\n단어갯수"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/review_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="20dp"
                android:text="12/20"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>