<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:text="휴대전화 번호"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_qna_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#88000000"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:textColor="#ffffff"
            android:visibility="gone" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="#44ffffff" />

        <EditText
            android:id="@+id/et_qna_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="#88000000"
            android:hint="휴대폰번호"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:text="문의 내용"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:entries="@array/title_array"
            android:prompt="@string/title_prompt"
            android:visibility="gone" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="#44ffffff" />

        <EditText
            android:id="@+id/et_qna_text"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="#88000000"
            android:gravity="left|top"
            android:hint="문의 내용"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="#44ffffff" />

        <Button
            android:id="@+id/bt_qna_submit"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/board_btn_submit"
            android:inputType="textMultiLine"
            android:text="등록하기"
            android:textColor="#ccffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_qna_splash"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:focusable="true"
        android:background="#88000000"
        android:padding="160dp" 
        android:visibility="gone"/>

</RelativeLayout>