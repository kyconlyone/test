<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff"
    android:padding="20dip">
    
    <TextView 
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="left"
		android:text="전체통계" android:textColor="#000000" android:textSize="17dip"/>

    
    <LinearLayout
        	android:layout_width="match_parent" android:layout_height="wrap_content"
        	android:orientation="horizontal">
        	
        	<LinearLayout
	        	android:layout_width="match_parent" android:layout_height="match_parent"
	        	android:orientation="vertical"
	        	android:layout_weight="0.3">
	        	
       	        <TextView 
					android:layout_width="match_parent" android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:text="맞춘 단어 수" android:textColor="#000000" android:textSize="14dip"/>
        	    
       	        <TextView 
					android:layout_width="match_parent" android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:text="모르는 단어 수" android:textColor="#000000" android:textSize="14dip"/>
       	        
       	        <TextView 
					android:layout_width="match_parent" android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:text="미선택 단어 수" android:textColor="#000000" android:textSize="14dip"/>
        	</LinearLayout>
        	
        	<LinearLayout
	        	android:layout_width="match_parent" android:layout_height="match_parent"
	        	android:orientation="vertical"
	        	android:layout_weight="0.4">
	        	
        	        <TextView android:id="@+id/tvRightCount"
						android:layout_width="match_parent" android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center_vertical"
						android:text="123" android:textColor="#000000" android:textSize="14dip"/>
        	        
        	        <TextView android:id="@+id/tvWrongCount"
						android:layout_width="match_parent" android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center_vertical"
						android:text="123" android:textColor="#000000" android:textSize="14dip"/>
        	        
        	        <TextView android:id="@+id/tvNoneCount"
						android:layout_width="match_parent" android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center_vertical"
						android:text="123" android:textColor="#000000" android:textSize="14dip"/>
        	</LinearLayout>
        	
        	<RelativeLayout 
	    	        android:layout_width="match_parent" android:layout_height="wrap_content"
	    	        android:layout_weight="0.2">
	    	    
    	        <org.andlib.ui.PercentView android:id="@+id/percentScore"
		            android:layout_width="110dp" android:layout_height="110dp" 
		            android:layout_centerInParent="true"/>
    	        
    	        <TextView android:id="@+id/tvPercentage" 
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:text=""
					android:textColor="#6fd765" android:textStyle="bold" android:textSize="20dip"/>
    	    </RelativeLayout>
	    	    
        		
    </LinearLayout>
</LinearLayout>
